<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileCounter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MobileCounter.Pages"
    AutomationId="Shell"
    Title="MobileCounter">
    
    <FlyoutItem>
        <ShellContent
            AutomationId="Counter"
            Title="Counter"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            AutomationId="FizzBuzz"
            Title="FizzBuzz"
            ContentTemplate="{DataTemplate pages:FizzBuzzPage}"
            Route="FizzBuzz" />
    </FlyoutItem>
</Shell>
